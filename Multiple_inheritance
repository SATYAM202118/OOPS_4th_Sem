#include <iostream>
using namespace std;

class Base1{       //Base class
public:
    Base1(){
        cout << "First Base class is called." << endl;
    }
};
class Base2{        //Base class
public:
    Base2(){
        cout << "Second Base class is called." << endl;
    }
};
// Derived class
class Derived : public Base1, public Base2 {};

int main(){
    Derived d;
    return 0;
}
